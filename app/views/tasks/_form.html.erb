<%= form_with(model: [@project, task], local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :task_name %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.radio_button(:status, "Pending") %>
    <%= form.label :status, "Pending", :style => "display:inline" %>
    <%= form.radio_button(:status, "In Process") %>
    <%= form.label :status, "In Process",:style => "display:inline" %>
    <%= form.radio_button(:status, "Done") %>
    <%= form.label :status, "Done", :style => "display:inline" %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_field :due_date, id: :task_due_date %>
  </div>

  <div class="field">
    <%= form.label :label %>
    <%= form.text_field :label, id: :task_label %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
